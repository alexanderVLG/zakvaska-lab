mixin footer(footerMods, currentUrl)
  -
    const footerLinks = [
      {
        href: "index.html",
        text: "Главная"
      },
      {
        href: "#",
        text: "Рецепты"
      },
      {
        href: "#",
        text: "Блог"
      },
      {
        href: "#",
        text: "Контакты"
      }
    ]
    const socialList = [
      {
        href: "https://dzen.ru",
        image: "../../../img/svg/zen-logo.svg",
        width: 36,
        height: 36,
        alt: "Cсылка на дзен",
      },
      {
        href: "https://vk.com",
        image: "../../../img/content/vk.webp",
        width: 40,
        height: 40,
        alt: "Ссылка на ВК",
      }
    ]
  footer.footer(class=footerMods)
    .container
      if(currentUrl === "index.html")
        img.footer__logo(src="../../../img/content/logotype.webp" alt="Логотип" aria-label="Логотип")
      else
        a.footer__logo(href="index.html" aria-label="Переход на главную")
          img(src="../../../img/content/logotype.webp" alt="Логотип." aria-label="Логотип")
      .footer-nav
        ul.footer-nav__list
          each link in footerLinks
            - const activeState = currentUrl === link.href
              li.footer-nav__item
                if(activeState)
                  span.footer-nav__link.is-active= link.text
                else
                  a.footer-nav__link(href="link.href")= link.text
      .footer-social
        ul.footer-social__list
          each social in socialList
            li.footer-social__item
              a.footer-social__link(href=social.href target="_blank")
                img(src=social.image, width=social.width height=social.height alt=social.alt)
    .container
      p.copyright &#169; &laquo;Закваска Лаб&raquo;. Все права защищены

